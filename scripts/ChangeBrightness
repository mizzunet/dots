#!/bin/bash
action="$@"
brightness="$(brightnessctl | grep Current | awk '{print $4}' |  sed 's/[^0-9]*//g')"


case $action in
	up)
		if [ $brightness -lt 10 ]; then  doas brightnessctl set 1%+;else doas brightnessctl set 5%+; fi
		;;
	down)
		if [ $brightness -lt 10 ]; then  doas brightnessctl set 4-;else doas brightnessctl set 5%-; fi
		;;		

	esac
	notify-send -u low  -h int:value:$(brightnessctl | grep Current | awk '{print $4}' |  sed 's/[^0-9]*//g') "Brightnessó°ƒŸ" -t 1000 

