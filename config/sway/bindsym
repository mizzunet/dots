bindsym {

    control+Shift+Escape exec $term htop
    $mod+Return exec "$term"
    $mod+space exec "$menu"
    $mod+m exec "$files"
    $mod+b exec "$browser" 
    $mod+Shift+m exec xdg-open https://mail.protonmail.com/u/0/all-mail#filter=unread
    $mod+c exec _clipboard clipman
    $mod+Shift+c exec _swayidle_toggle
    $mod+Shift+w exec _wifi_toggle
    $mod+Shift+n exec _nightlight_toggle
    Control+Shift+Print exec _screenrecord
    Mod1+Shift+P exec _playwithmpv
    control+Shift+e exec emote
    Print exec grim -g "$(slurp)" - > /tmp/screen.png && wl-copy < /tmp/screen.png && notify-send "Screenshot Copied to Clipboard" && swappy -f /tmp/screen.png 
    Shift+Print exec grim -c /tmp/screen.png && wl-copy < /tmp/screen.png  && notify-send "Screenshot Copied to Clipboard" && swappy -f /tmp/screen.png
    #Shift+Print grim ~/Pictures/Screenshot/$(date +%d%m%y-%I%M%S) | wl-copy && notify-send "Screenshot Copied to Clipboard"
    control+mod1+Delete exec loginctl reboot
    control+Escape exec makoctl dismiss -a

    XF86MonBrightnessUp   exec _brightness_change up
    XF86MonBrightnessDown exec _brightness_change down
    XF86AudioPlay exec playerctl play-pause
    XF86AudioNext exec playerctl next
    XF86AudioPrev exec playerctl previous
    XF86AudioRaiseVolume exec _volume_change up
    XF86AudioLowerVolume exec _volume_change down
    XF86AudioMute        exec _volume_change mute
    XF86WLAN exec sway_wifi

# waydroid
