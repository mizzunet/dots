#!/usr/bin/bash
cmd=light
change=1
timeout_1=30
timeout_2=60
timeout_3=180
ICONA=󰅶
notify_info="Caffine 󰅶"
ICON=󰅶

if (pidof swayidle > /dev/null); then
   notify-send -u low "Caffine" -t 0
   killall -9 swayidle
else
swayidle -w \
             timeout 30 'brillo -O && brillo -q -u 100000 -U 8' resume  'brillo -q -u 100000 -A 8' \
             timeout 60 'wlr-randr --output eDP-1 --off' resume 'wlr-randr --output eDP-1 --on' \
             timeout 180 'sway_swayidle_check'
   makoctl dismiss
fi
