#!/bin/bash
# Starts watching clipboard and shows list of items by bemenu
action="$@"
case $action in
	clipman)
        clipman pick -t bemenu --tool-args='-l 30 -n -b -i --fn "Inconsolata 12" --hb #ffffff --hf #00000 --nb #000000 --nf #ffffff'
		;;
    watcher)
        wl-paste -t text --watch clipman store 
        ;;
esac

