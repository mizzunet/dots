#!/bin/fish

set sway ~/.config/sway/config
set mako ~/.config/mako/config
set sirula ~/.config/sirula/style.css
set waybar ~/.config/waybar/style.css

set action "$argv[0]"

function print
  echo Sway: (grep \$font $sway | head -1)  | string replace "set \$font" ""
  echo Mako: (grep font $mako | string replace "font=" "")
  echo Waybar: (grep font-family $waybar | string replace "font-family:" "")
  echo Sirula: (grep font-family $sirula | string replace "font-family:" "")
end

print
case $action in
  change)
  set font "$argv[1]"
  change_sway
  change_mako
  change_waybar
  change_sirula
  ;;
esac

