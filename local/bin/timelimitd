#!/bin/bash

interval=3
USER=$1

#$USER ALL = (root) NOPASSWD: loginctl

while true
do
	if test $(date | cut -d' ' -f4| cut -d':' -f2) -ge 21; then
		#gnome-session-quit --logout
		notify-send "Logging out in 10 seconds"
		#echo "Logging out in 10 seconds"
		sleep 10
		loginctl kill-user $1
	fi

	sleep $interval
done
