#!/usr/bin/env bash
# Script to change brightness level by brillo with animation. Also send notification
action=$1
current=$(brillo)

if (( $(bc <<<"$current < 5.0") ));then
	up=2
	down=2
else
	up=4
	down=8
fi

case $action in
	up)
		brillo -q -u 150000 -A $up
		;;
	down)
		brillo -q -u 150000 -U $down
		;;
esac

current=$(brillo)

notify-send -u low  -h int:value:$current "Brightnessó°ƒŸ" -t 1000 

