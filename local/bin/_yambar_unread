#!/usr/bin/bash

#unread-count-yambar -u mizzunet -p $HYDROXIDE_BRIDGE_PASS -S 127.0.0.1 -P 1143

INTERVAL=30

printf -- '%s\n' "count|string|"
printf -- '%s\n' ""

while true;do
  if ! (pidof hydroxide> /dev/null);then
      sleep $INTERVAL
      continue
  fi

  count=$(unread-count -u mizzunet -p $HYDROXIDE_BRIDGE_PASS -S 127.0.0.1 -P 1143)

  printf -- '%s\n' "count|string|${count}"
  printf -- '%s\n' ""

  sleep $INTERVAL
done
