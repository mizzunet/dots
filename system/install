connmanctl
mount -o subvol=@rootfs,noatime,compress=zstd:3,ssd,space_cache=v2,commit=120  /dev/sdb2 /mnt
echo Mounted root
mkdir -p /mnt/{home,boot,var/cache,var/tmp,var/log}
echo Created folders
mount -o noatime /dev/sdb1 /mnt/boot
mount -o subvol=@home,noatime,compress=zstd:3,ssd,space_cache=v2,commit=120 /dev/sdb2 /mnt/home
mount -o subvol=@var_tmp,noatime,compress=zstd:3,ssd,space_cache=v2,commit=120  /dev/sdb2 /mnt/var/tmp
mount -o subvol=@var_log,noatime,compress=zstd:3,ssd,space_cache=v2,commit=120   /dev/sdb2 /mnt/var/log
mount -o subvol=@var_cache,noatime,compress=zstd:3,ssd,space_cache=v2,commit=120   /dev/sdb2 /mnt/var/cache	
echo Mounted 

sed 's/#ParallelDownloads/ParallelDownloads' /etc/pacman.conf
sed 's/ParallelDownloads = 5/ParallelDownloads = 25' /etc/pacman.conf
basestrap /mnt linux-lts base base-devel btrfs-progs openrc seatd-openrc linux-firmware neovim

fstabgen -U /mnt >> /mnt/etc/fstab
echo -e "tmpfs /tmp tmpfs defaults,noatime,nosuid,nodev,mode=1777,size=512M 0 0" >> /mnt/etc/fstab

echo Copying etc
cp install_chroot /mnt
cp configs/etc/pacman.conf /mnt/etc/pacman.conf.bak
cp configs/etc/doas.conf /mnt/etc
cp configs/etc/resolv.conf /mnt/etc
cp -r configs/etc/iwd /mnt/etc

artix-chroot /mnt
