exec {
    dbus-update-activation-environment DISPLAY I3SOCK SWAYSOCK WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway 
    dbus-daemon --session --address=unix:path=$XDG_RUNTIME_DIR/bus 


# power saving
  doas /usr/bin/powertop --auto-tune 

# exec background
  hydroxide -disable-carddav -imap-host localhost -smtp-host localhost -debug  serve 2&> /tmp/hydroxide
  bubblemaild
  pipewire_start
  sway_transparent -o 0.80 
  sway_nightlight
  sway_automount
  sway_low_battery
  sway_clipboard watcher
  /usr/bin/sway-audio-idle-inhibit 
  /usr/bin/autotiling 

# exec foreground
  geary --gapplication-service
  /usr/bin/mako 
  /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 
  sway_swayidle

# Firefox
  mkdir /tmp/firefox
  ln -sf  /tmp/firefox ~/.cache/mozilla/firefox
} 
 
  exec_always sway_bar

