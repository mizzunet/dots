exec {
    $interface gtk-theme $theme
    $interface icon-theme $icon
    $interface cursor-theme $cursor
    $interface font-name $font
    $interface enable-animations false
    $interface color-scheme prefer-dark
    gsettings set org.gtk.Settings.FileChooser window-size '(740, 371)'
    gsettings set org.gnome.desktop.default-applications.terminal exec $term
    gsettings set org.gnome.desktop.default-applications.terminal exec-arg ''
}

exec {
    dbus-update-activation-environment DISPLAY I3SOCK SWAYSOCK WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway 
    dbus-daemon --session --address=unix:path=$XDG_RUNTIME_DIR/bus 
    dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK

# power saving
  doas /usr/bin/powertop --auto-tune 

# exec background
  hydroxide -disable-carddav -imap-host localhost -smtp-host localhost -debug  serve 2&> /tmp/hydroxide
  pipewire_start
  sway_transparent -o 0.80 
  sway_nightlight
  sway_automount
  sway_low_battery
  sway_clipboard watcher
  sway-audio-idle-inhibit 
  autotiling 

# exec foreground
  geary --gapplication-service
  mako 
  polkit-gnome/polkit-gnome-authentication-agent-1 
  sway_swayidle
  emote
} 
 
 exec_always sway_bar

